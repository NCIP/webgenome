<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
    
<hibernate-mapping>

<class 
    name="org.rti.webcgh.standalone.dao.hibernate.ProcessingJob" 
    table="PROCESSING_JOB"
>

    <id
        name="jobId"
        type="long"
        column="JOB_ID"
    >
        <generator class="sequence">
            <param name="sequence">SQ_PROCESSING_JOB</param>
        </generator>
    </id>

    <property
        name="requestId"
        type="java.lang.String"
        column="REQUEST_ID"
        length="50"
    />
    <property
        name="userId"
        type="java.lang.String"
        column="USER_ID"
        not-null="true"
        length="100"
    />
    <property
        name="type"
        type="java.lang.String"
        column="TYPE"
        length="128"
    />
    <property
        name="percentComplete"
        type="java.lang.Integer"
        column="PERCENT_COMPLETE"
        length="4"
    />
    <property
        name="createdDt"
        type="java.sql.Date"
        column="CREATED_DT"
        length="7"
    />
    <property
        name="modifiedDt"
        type="java.sql.Date"
        column="MODIFIED_DT"
        length="7"
    />
    <property
        name="jobProperties"
        type="java.lang.String"
        column="JOB_PROPERTIES"
        length="500"
    />

    <!-- Associations -->
  
    <!-- bi-directional one-to-many association to ProcessingJobStatus -->
    <set
        name="processingJobStatuses"
        lazy="false"
        inverse="true"
        cascade="none"
    >
        <key>
            <column name="JOB_ID" />
        </key>
        <one-to-many 
            class="org.rti.webcgh.standalone.dao.hibernate.ProcessingJobStatus"
        />
    </set>

</class>
</hibernate-mapping>
