<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.array.persistent.impl.HibernatePersistentGenomeLocation" table="GENOME_LOCATION">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<property name="location"/>
		
		<many-to-one name="chromosome" class="org.rti.webcgh.array.persistent.impl.HibernatePersistentChromosome" lazy="false" column="chromosome_id"/>
	
	</class>

</hibernate-mapping>