<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
    	name="org.rti.webcgh.array.persistent.impl.HibernatePersistentPipelineStep" 
    	table="PIPELINE_STEP"
    	lazy="false">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="className" column="CLASS_NAME"/>
        <property name="stepNum" column="STEP_NUM"/>
        <set name="pipelineStepParameters" cascade="all" lazy="false">
        	<key column="PIPELINE_STEP_ID"/>
        	<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentPipelineStepParameter"/>
        </set>
    </class>

</hibernate-mapping>