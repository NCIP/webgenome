<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.array.persistent.impl.HibernatePersistentGenomeFeature" table="GENOME_FEATURE" lazy="false">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<property name="name"/>
		<property name="start" column="chrom_start"/>
		<property name="end" column="chrom_end"/>
		
		<many-to-one name="chromosome" class="org.rti.webcgh.array.persistent.impl.HibernatePersistentChromosome" 
			lazy="false" column="chromosome_id"/>
		<many-to-one name="genomeFeatureDataSet" 
			class="org.rti.webcgh.array.persistent.impl.HibernatePersistentGenomeFeatureDataSet"
			lazy="false" column="genome_feature_data_set_id"/>
			
		<bag name="exons" lazy="false" cascade="all">
			<key column="genome_feature_id"/>
			<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentExon"/>
		</bag>
	
	</class>

</hibernate-mapping>