<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.array.persistent.impl.HibernatePersistentArray" table="ARRAY" lazy="false">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<property name="vendor"/>
		<property name="name"/>
		
		<bag name="reporters" lazy="false" cascade="all">
			<key column="array_id"/>
			<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentReporter"/>
		</bag>
		
		<many-to-one name="organism" class="org.rti.webcgh.array.persistent.impl.HibernatePersistentOrganism" lazy="false" column="organism_id"/>
		
	</class>

</hibernate-mapping>