<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.array.persistent.impl.HibernatePersistentExperiment" table="EXPERIMENT" lazy="false">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<property name="name"/>
		<property name="description"/>
		<property name="virtual" type="yes_no"/>
		<property name="databaseName" column="database_name"/>
		<property name="userName" column="user_name"/>
		
		<bag name="bioAssays" lazy="false" cascade="save-update">
			<key column="experiment_id"/>
			<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentBioAssay"/>
		</bag>
		
	</class>

</hibernate-mapping>
