<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.array.persistent.impl.HibernatePersistentCytologicalMap" table="CYTOLOGICAL_MAP" lazy="false">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<property name="centromereStart" column="centromere_start"/>
		<property name="centromereEnd" column="centromere_end"/>
		
		<many-to-one name="chromosome" class="org.rti.webcgh.array.persistent.impl.HibernatePersistentChromosome" lazy="false" column="chromosome_id"/>
		
		<bag name="cytobands" lazy="false" cascade="all">
			<key column="cytological_map_id"/>
			<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentCytoband"/>
		</bag>
	
	</class>

</hibernate-mapping>