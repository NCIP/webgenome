<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class
    	name="org.rti.webcgh.array.persistent.impl.HibernatePersistentPipeline" 
    	table="PIPELINE"
    	lazy="false">
        <id name="id">
            <generator class="increment"/>
        </id>
        <property name="name"/>
        <property name="userName" column="USER_NAME"/>
        <set name="pipelineSteps" cascade="all" lazy="false" sort="natural">
        	<key column="PIPELINE_ID"/>
        	<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentPipelineStep"/>
        </set>
    </class>

</hibernate-mapping>