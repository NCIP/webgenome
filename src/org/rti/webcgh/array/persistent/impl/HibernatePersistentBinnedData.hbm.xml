<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.array.persistent.impl.HibernatePersistentBinnedData" table="BINNED_DATA" lazy="false">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<many-to-one name="quantitationType" class="org.rti.webcgh.array.persistent.impl.HibernatePersistentQuantitationType" lazy="false" column="quantitation_type_id"/>
		
		<bag name="chromosomeBins" lazy="false" cascade="all">
			<key column="binned_data_id"/>
			<one-to-many class="org.rti.webcgh.array.persistent.impl.HibernatePersistentChromosomeBin"/>
		</bag>
		
	</class>

</hibernate-mapping>
