<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.domain.BioAssayData" table="BIO_ASSAY_DATA_2">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<map
			name="chromosomeArrayData"
			cascade="all"
			sort="natural">
			<key
				column="bio_assay_data_id"
				not-null="true"
			/>
			<map-key
				column="chromosome"
				type="short"
			/>
			<one-to-many class="org.rti.webcgh.domain.ChromosomeArrayData"/>
		</map>
	</class>

</hibernate-mapping>