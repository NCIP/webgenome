<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="org.rti.webcgh.domain.Experiment" table="EXPERIMENT_2">
	
		<id name="id" column="ID">
		    <generator class="increment"/>
		</id>
		
		<property name="name"/>
		
		<set
			name="bioAssays"
			cascade="all"
		>
			<key
				column="experiment_id"
				not-null="true"
			/>
			<one-to-many class="org.rti.webcgh.domain.BioAssay"/>
		</set>
	</class>

</hibernate-mapping>