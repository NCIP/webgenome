<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">


<beans>

	<bean
		id="propertyConfigurer"
		class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
		<property name="location">
			<bean class="org.springframework.core.io.ClassPathResource">
				<constructor-arg><value>conf/webcgh.properties</value></constructor-arg>
			</bean>
		</property>
	</bean>

	<bean
		id="dataSource"
		class="org.apache.derby.jdbc.EmbeddedConnectionPoolDataSource">
		<property name="databaseName"><value>${db.home}/${cloudscape.dir}/${db.name}</value></property>
		<property name="user"><value>${db.user.name}</value></property>
		<property name="password"><value>${db.password}</value></property>
	</bean>
	
	<bean id="sessionFactory" class="org.springframework.orm.hibernate3.LocalSessionFactoryBean">
    	<property name="dataSource" ref="dataSource"/>
    	<property name="mappingResources">
	      	<list>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentOrganism.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentGenomeAssembly.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentChromosome.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentQuantitationType.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentReporter.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentQuantitation.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentGenomeLocation.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentReporterMapping.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentGenomeFeatureType.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentGenomeFeatureDataSet.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentGenomeFeature.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentExon.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentCytoband.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentCytologicalMap.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentCytologicalMapSet.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentChromosomeBin.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentBinnedData.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentArray.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentArrayMapping.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentArrayDatum.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentBioAssayData.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentBioAssay.hbm.xml</value>
        		<value>org/rti/webcgh/array/persistent/impl/HibernatePersistentExperiment.hbm.xml</value>
	      	</list>
    	</property>
    	<property name="hibernateProperties">
      		<props>
        		<prop key="hibernate.dialect">org.hibernate.dialect.DerbyDialect</prop>
      		</props>
    	</property>
  	</bean>
  	
  	<bean id="hibernatePersistor" class="org.rti.webcgh.array.persistent.impl.HibernatePersistor">
  		<property name="sessionFactory">
  			<ref bean="sessionFactory"/>
  		</property>
  	</bean>
  	
  	<bean id="jdbcPersistor" class="org.rti.webcgh.array.persistent.impl.JdbcPersistor">
  		<property name="dataSource" ref="dataSource"/>
  	</bean>
  	
  	
  	<bean id="hibernatePersistentDomainObjectMgr" class="org.rti.webcgh.array.persistent.impl.HibernatePersistentDomainObjectMgr">
  		<property name="hibernatePersistor">
  			<ref bean="hibernatePersistor"/>
  		</property>
  		<property name="jdbcPersistor">
  			<ref bean="jdbcPersistor"/>
  		</property>
  	</bean>
  	
  	<bean id="annotationEtlManager" class="org.rti.webcgh.etl.AnnotationEtlManager">
  		<property name="persistentDomainObjectMgr">
  			<ref bean="hibernatePersistentDomainObjectMgr"/>
  		</property>
  	</bean>
  	
  	<bean id="arrayEtlManager" class="org.rti.webcgh.etl.ArrayEtlManager">
  		<property name="persistentDomainObjectMgr">
  			<ref bean="hibernatePersistentDomainObjectMgr"/>
  		</property>
  	</bean>
  	
  	<bean id="cytobandEtlManager" class="org.rti.webcgh.etl.CytobandEtlManager">
  		<property name="persistentDomainObjectMgr">
  			<ref bean="hibernatePersistentDomainObjectMgr"/>
  		</property>
  	</bean>
  	
  	<bean id="esiEtlManager" class="org.rti.webcgh.etl.EsiEtlManager">
  		<property name="persistentDomainObjectMgr">
  			<ref bean="hibernatePersistentDomainObjectMgr"/>
  		</property>
  		<property name="dbName">
  			<value>SKY</value>
  		</property>
  	</bean>

</beans>