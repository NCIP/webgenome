<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE server>
<!-- $Id$ -->

<server>

  <!-- ==================================================================== -->
  <!-- PropertyEditorManager Service                                        -->
  <!-- ==================================================================== -->

  <!--
     | Allows access to the PropertyEditorManager, which is used when setting
     | MBean attribute values from configuration.
   -->

  <mbean code="org.jboss.varia.property.PropertyEditorManagerService" 
	 name="jboss:type=Service,name=PropertyEditorManager">

    <!-- 
       | Register and editor for each of the type_name=editor_type_name listed
       | in properties file style convetion.

    <attribute name="Editors">
      java.net.URL=my.project.editors.URLPropertyEditor
    </attribute>

    -->

  </mbean>


  <!-- ==================================================================== -->
  <!-- System Properties Service                                            -->
  <!-- ==================================================================== -->

  <!--
     | Allows rich access to system properties.
   -->

  <mbean code="org.jboss.varia.property.SystemPropertiesService" 
	 name="jboss:type=Service,name=SystemProperties">
	 
	 <attribute name="Properties">
     
     <!-- ================================== -->
     <!-- START: webGenome System Properties -->
     <!-- ================================== -->
         
         <!-- ===============================
              System Administrator Properties
              =============================== -->
         sysadmin.email=dhall@rti.org
         sysadmin.password=webcgh123
         
         <!-- ===================
              Database Properties
              =================== -->
         <!-- Database User name (DO NOT EDIT UNLESS REBUILDING DATABASE) -->
         db.user.name=webg
         
         <!-- Database Password (DO NOT EDIT UNLESS REBUILDING DATABASE) -->
         db.password=webcgh9
         
         <!-- JDBC Connection String -->
         db.url=specify

         <!-- ================
              RServ Properties
              ================ -->
         rserve.url=localhost


         <!-- =============================
              Plot Interactivity Properties
              ============================= -->

         <!--  Sub context of URL to directory containing generated plot images -->
         image.sub.context=/plots
         image.dir.path=C:/cvs/webgenome/webgenome/webapp/plots

         <!-- ==============================
              Client application integration
              ============================== -->
         local.client.ejb.access=true
         jndi.name=RBTBioAssayService
         jndi.provider.url=jnp://localhost:1099
             
         <!-- ===================================
              Error Exception Emailing Properties
              =================================== -->
         error.page.email.subject=webGenome Exception
         mail.smtp.host=specify

     <!-- ================================ -->
     <!-- END: webGenome System Properties -->
     <!-- ================================ -->
         
     </attribute>
         

    <!-- 
       | Load properties from each of the given comma seperated URLs

    <attribute name="URLList">
      http://somehost/some-location.properties,
      ./conf/somelocal.properties
    </attribute>

    -->

    <!-- 
       | Set raw properties file style properties.

    <attribute name="Properties">

      my.project.property=This is the value of my property
      my.project.anotherProperty=This is the value of my other property

    </attribute>
     
    -->

  </mbean>

</server>
